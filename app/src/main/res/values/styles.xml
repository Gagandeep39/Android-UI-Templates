    </style>

    <style name="Progress" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/design_10</item>
        <item name="actionBarSize">65sp</item>
    </style>

    <style name="tab" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="color">
        <item name="android:colorControlHighlight">@color/design_3</item>
    </style>

    <style name="ripple">
        <item name="android:theme">@style/color</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="rippleipple_accent">
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="accent_ripple">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:theme">@style/rippleipple_accent</item>
    </style>

